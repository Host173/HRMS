@{
    ViewData["Title"] = "Organizational Hierarchy";
    ViewData["FullWidth"] = true;
}

<div class="premium-card card-full-width" style="margin-bottom: 2rem;">
    <div class="hierarchy-header">
        <div>
            <h1 style="margin: 0 0 0.5rem 0; color: var(--color-text-primary); display: flex; align-items: center; gap: 0.75rem;">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: var(--color-primary);">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Organizational Hierarchy
            </h1>
            <p style="margin: 0; color: var(--color-text-secondary); font-size: 0.95rem;">Visualize and manage your organization's structure</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error" role="alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Hierarchy Visualization -->
    <section class="hierarchy-section">
        <div class="hierarchy-controls">
            <div class="hierarchy-controls-left">
                <div class="search-box">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <input type="text" id="hierarchySearch" placeholder="Search by name, position, or department..." />
                    <button type="button" id="clearSearch" class="clear-search-btn" style="display: none;" aria-label="Clear search">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="hierarchy-controls-right">
                <div class="hierarchy-actions">
                    <button type="button" id="expandAll" class="hierarchy-action-btn" title="Expand All">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="6 9 12 15 18 9"></polyline>
                        </svg>
                        <span>Expand All</span>
                    </button>
                    <button type="button" id="collapseAll" class="hierarchy-action-btn" title="Collapse All">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="18 15 12 9 6 15"></polyline>
                        </svg>
                        <span>Collapse All</span>
                    </button>
                </div>
                <div class="hierarchy-stats" id="hierarchyStats">
                    <div class="stat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        <span id="totalEmployees">0</span>
                        <span class="stat-label">Total Employees</span>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.Hierarchy != null && ((List<HRMS.Models.HierarchyNodeViewModel>)ViewBag.Hierarchy).Any())
        {
            <div class="org-chart-container" id="orgChartContainer">
                <div class="org-chart-wrapper">
                    @foreach (var root in (List<HRMS.Models.HierarchyNodeViewModel>)ViewBag.Hierarchy)
                    {
                        <div class="org-chart-root">
                            @await Html.PartialAsync("_HierarchyNode", root)
                        </div>
                    }
                </div>
            </div>
            <div id="noResults" class="no-results" style="display: none;">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" style="opacity: 0.3;">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <p>No employees found matching your search.</p>
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" style="opacity: 0.3;">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <p>No hierarchy data available.</p>
                <small>Start by adding employees and assigning managers to build your organizational structure.</small>
            </div>
        }
    </section>

    <!-- Reassign Employee -->
    <section style="margin-top: 3rem;">
        <h2 style="margin-bottom: 1.5rem; color: var(--color-text-primary); display: flex; align-items: center; gap: 0.5rem;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
            </svg>
            Reassign Employee
        </h2>
        <div class="premium-card" style="background: var(--color-bg-secondary); padding: 1.5rem;">
            <form asp-controller="Component5" asp-action="ReassignEmployee" method="post">
                @Html.AntiForgeryToken()

                <div style="margin-bottom: 1.5rem;">
                    <label for="EmployeeId" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: var(--color-text-primary);">
                        Select Employee <span style="color: var(--color-danger);">*</span>
                    </label>
                    <select name="EmployeeId" id="EmployeeId" required class="report-form-select">
                        <option value="">-- Select Employee --</option>
                        @if (ViewBag.AllEmployees != null)
                        {
                            @foreach (var emp in (List<HRMS.Models.Employee>)ViewBag.AllEmployees)
                            {
                                <option value="@emp.employee_id">
                                    @(emp.full_name ?? $"{emp.first_name} {emp.last_name}") - 
                                    @(emp.department?.department_name ?? "No Department")
                                </option>
                            }
                        }
                    </select>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label for="NewDepartmentId" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: var(--color-text-primary);">
                        New Department (Optional)
                    </label>
                    <select name="NewDepartmentId" id="NewDepartmentId" class="report-form-select">
                        <option value="">-- Keep Current Department --</option>
                        @if (ViewBag.Departments != null)
                        {
                            @foreach (var dept in (List<HRMS.Models.Department>)ViewBag.Departments)
                            {
                                <option value="@dept.department_id">@dept.department_name</option>
                            }
                        }
                    </select>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label for="NewManagerId" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: var(--color-text-primary);">
                        New Manager (Optional)
                    </label>
                    <select name="NewManagerId" id="NewManagerId" class="report-form-select">
                        <option value="">-- Keep Current Manager --</option>
                        @if (ViewBag.AllEmployees != null)
                        {
                            @foreach (var emp in (List<HRMS.Models.Employee>)ViewBag.AllEmployees)
                            {
                                <option value="@emp.employee_id">
                                    @(emp.full_name ?? $"{emp.first_name} {emp.last_name}")
                                </option>
                            }
                        }
                    </select>
                </div>

                <div style="display: flex; gap: 1rem;">
                    <button type="submit" class="btn-premium btn-primary" style="padding: 0.75rem 2rem;">
                        Reassign Employee
                    </button>
                    <button type="reset" class="btn-premium btn-secondary" style="padding: 0.75rem 2rem;">
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

<link rel="stylesheet" href="~/css/hierarchy.css" />
<script src="~/js/hierarchy.js" defer></script>
