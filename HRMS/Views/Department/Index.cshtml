@model List<HRMS.Models.Department>
@{
    ViewData["Title"] = "Department Management";
    ViewData["FullWidth"] = true;
}

<div class="premium-card card-full-width" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h1 style="margin: 0; color: var(--color-text-primary);">Department Management</h1>
        <a asp-action="Create" class="btn-premium btn-primary" style="padding: 0.75rem 1.5rem;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem; display: inline;">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Create New Department
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="background: rgba(34, 197, 94, 0.1); border: 1px solid var(--color-success); color: #15803d; padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1rem;" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div style="background: rgba(239, 68, 68, 0.1); border: 1px solid var(--color-error); color: #dc2626; padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1rem;" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div style="text-align: center; padding: 3rem; color: var(--color-text-secondary);">
            <p style="font-size: 1.1rem; margin: 0;">No departments found. Create your first department to get started.</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr style="background: var(--color-bg-secondary); border-bottom: 2px solid var(--color-border);">
                        <th style="padding: 1rem; text-align: left; font-weight: 600; color: var(--color-text-primary);">Department Name</th>
                        <th style="padding: 1rem; text-align: left; font-weight: 600; color: var(--color-text-primary);">Purpose</th>
                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-primary);">Total Members</th>
                        <th style="padding: 1rem; text-align: left; font-weight: 600; color: var(--color-text-primary);">Department Head</th>
                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-primary);">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dept in Model)
                    {
                        <tr style="border-bottom: 1px solid var(--color-border);">
                            <td style="padding: 1rem; color: var(--color-text-primary); font-weight: 500;">@dept.department_name</td>
                            <td style="padding: 1rem; color: var(--color-text-secondary);">@(dept.purpose ?? "N/A")</td>
                            <td style="padding: 1rem; text-align: center; color: var(--color-text-primary);">@dept.Employee.Count</td>
                            <td style="padding: 1rem; color: var(--color-text-primary);">
                                @if (dept.department_head != null)
                                {
                                    @(dept.department_head.full_name ?? $"{dept.department_head.first_name} {dept.department_head.last_name}")
                                }
                                else
                                {
                                    <span style="color: var(--color-text-secondary);">Not assigned</span>
                                }
                            </td>
                            <td style="padding: 1rem; text-align: center;">
                                <div style="display: flex; gap: 0.5rem; justify-content: center;">
                                    <a asp-action="ViewMembers" asp-route-departmentId="@dept.department_id" class="btn-premium btn-secondary" style="padding: 0.4rem 0.8rem; font-size: 0.85rem; text-decoration: none;">
                                        View Members
                                    </a>
                                    <a asp-action="AssignToDepartment" class="btn-premium btn-primary" style="padding: 0.4rem 0.8rem; font-size: 0.85rem; text-decoration: none;">
                                        Assign People
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@dept.department_id" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this department? All employees must be reassigned first.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-premium" style="padding: 0.4rem 0.8rem; font-size: 0.85rem; background: var(--color-error); color: white; border: none; cursor: pointer;">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

