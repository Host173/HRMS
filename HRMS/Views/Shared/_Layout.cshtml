<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS Enterprise</title>
    
    <!-- Premium Design System -->
    <link rel="stylesheet" href="~/css/premium-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/enhancements.css" asp-append-version="true" />
    
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Page-specific styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
@using HRMS.Helpers
@using Microsoft.EntityFrameworkCore
@inject HRMS.Data.HrmsDbContext DbContext
@{
    int? currentEmployeeId = null;
    bool isSystemAdmin = false;
    bool isHRAdmin = false;
    bool isLineManager = false;
    HRMS.Models.Employee? currentEmployee = null;

    if (User.Identity?.IsAuthenticated == true)
    {
        currentEmployeeId = AuthorizationHelper.GetCurrentEmployeeId(User);
        if (currentEmployeeId.HasValue)
        {
            currentEmployee = await DbContext.Employee
                .AsNoTracking()
                .FirstOrDefaultAsync(e => e.employee_id == currentEmployeeId.Value);
            
            if (currentEmployee != null)
            {
                isSystemAdmin = await AuthorizationHelper.IsSystemAdminAsync(DbContext, currentEmployeeId.Value);
                isHRAdmin = await AuthorizationHelper.IsHRAdminAsync(DbContext, currentEmployeeId.Value);
                isLineManager = await AuthorizationHelper.IsLineManagerAsync(DbContext, currentEmployeeId.Value);
            }
        }
    }
}
    @if (ViewData["HideLayout"] as bool? == true)
    {
        @RenderBody()
        
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
        <script src="~/js/particles.js" asp-append-version="true"></script>
        <script src="~/js/enhancements.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    }
    else
    {
        <!-- Main Application Layout -->
        <header class="premium-navbar">
            <div style="display: flex; align-items: center; gap: 1rem;">
                <!-- Animated Mini Logo -->
                <div class="logo-container" style="width: 40px; height: 40px;">
                    <svg class="static-logo" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg">
                        <g stroke-width="60" fill="none">
                            <path d="M531.8 385v483.3h0.1V385h-0.1z"/>
                            <path d="M670.9 497.1h86v16h-86z"/>
                            <path d="M670.9 625.1h86v16h-86z"/>
                            <path d="M233.9 241.1h86v16h-86z"/>
                            <path d="M384 241.1h86v16h-86z"/>
                            <path d="M233.9 369h86v16h-86z"/>
                            <path d="M384 369h86v16h-86z"/>
                            <path d="M234 497.5h86v16h-86z"/>
                            <path d="M384 497.2h86v16h-86z"/>
                            <path d="M398.3 704.4c-11.9-11.9-28.4-19.3-46.5-19.3-36.2 0-65.8 29.6-65.8 65.8v117.4h20V750.9c0-12.2 4.8-23.6 13.5-32.3 8.7-8.7 20.2-13.5 32.3-13.5 12.2 0 23.6 4.8 32.3 13.5 8.7 8.7 13.5 20.2 13.5 32.3v117.4h20V750.9c0-18.1-7.4-34.5-19.3-46.5z"/>
                            <path d="M575.8 429v437.9h0.1V429h-0.1zM286.2 868.3h131.6-131.6z"/>
                            <path d="M896 868.3V385H575.9V111.6H128v756.7H64v44h896v-44h-64z 
                                     m-364.1 0H172V155.6h359.9v712.7z 
                                     m320.1-1.5H575.8V429H852v437.8z"/>
                        </g>
                    </svg>
                </div>
                <a asp-controller="Home" asp-action="Index" style="font-weight: 700; font-size: 1.25rem; color: var(--color-text-primary);">
                    HRMS <span style="color: var(--color-primary); font-weight: 400;">Enterprise</span>
                </a>
            </div>

            <nav style="display: flex; gap: 0.5rem; align-items: center;">
                <!-- Theme Toggle Button -->
                <button id="theme-toggle-btn" class="theme-toggle" title="Toggle Dark Mode">
                    <!-- Sun Icon (for dark mode) -->
                    <svg id="icon-sun" style="display: none;" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="5"></circle>
                        <line x1="12" y1="1" x2="12" y2="3"></line>
                        <line x1="12" y1="21" x2="12" y2="23"></line>
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                        <line x1="1" y1="12" x2="3" y2="12"></line>
                        <line x1="21" y1="12" x2="23" y2="12"></line>
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                    </svg>
                    <!-- Moon Icon (for light mode) -->
                    <svg id="icon-moon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                    </svg>
                </button>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Dashboard</a>
                    <a asp-controller="Attendance" asp-action="Index" class="nav-link">Attendance</a>
                    
                    <!-- Notification Bell -->
                    <a asp-controller="Notification" asp-action="Index" class="nav-link notification-bell-link" title="Notifications" style="position: relative;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                        </svg>
                        <span class="notification-badge d-none" id="navbar-notification-badge">0</span>
                    </a>
                    
                    <div style="width: 1px; height: 24px; background: var(--color-border); margin: 0 0.5rem;"></div>
                    <span style="display: flex; align-items: center; gap: 0.5rem; margin-right: 1rem;">
                        @{
                            string? profileImage = currentEmployee?.profile_image;
                            string displayName = currentEmployee?.full_name ?? currentEmployee?.email ?? User.Identity?.Name ?? "User";
                            string initial = currentEmployee?.first_name?.Substring(0, 1).ToUpper() ?? 
                                           currentEmployee?.email?.Substring(0, 1).ToUpper() ?? 
                                           displayName.Substring(0, 1).ToUpper();
                        }
                        @if (!string.IsNullOrEmpty(profileImage))
                        {
                            <img src="@profileImage" alt="@displayName" style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover; border: 2px solid var(--color-primary-light);" />
                        }
                        else
                        {
                            <div style="width: 32px; height: 32px; background: var(--color-primary-light); border-radius: 50%; color: white; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 0.875rem;">
                                @initial
                            </div>
                        }
                        <span style="font-size: 0.9rem; font-weight: 500;">@displayName</span>
                    </span>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn-premium btn-secondary" style="padding: 0.4rem 0.8rem; font-size: 0.85rem;">Sign Out</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="nav-link">Sign In</a>
                    <a asp-controller="Account" asp-action="Register" class="btn-premium btn-primary" style="padding: 0.4rem 1rem; font-size: 0.9rem;">Get Started</a>
                }
            </nav>
        </header>

        <main style="padding: 2rem; max-width: 1200px; margin: 0 auto; min-height: calc(100vh - 140px);">
            @if (TempData["SuccessMessage"] != null)
            {
                <div style="background: rgba(34, 197, 94, 0.1); border: 1px solid var(--color-success); color: #15803d; padding: 1rem; border-radius: var(--radius-md); margin-bottom: 2rem; display: flex; align-items: center; gap: 0.5rem;" role="alert">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M22 4L12 14.01l-3-3" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div style="background: rgba(239, 68, 68, 0.08); border: 1px solid var(--color-danger); color: #b91c1c; padding: 1rem; border-radius: var(--radius-md); margin-bottom: 2rem; display: flex; align-items: center; gap: 0.5rem;" role="alert">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    @TempData["ErrorMessage"]
                </div>
            }
            @RenderBody()
        </main>

        <footer class="premium-footer">
            <div style="max-width: 1200px; margin: 0 auto;">
                <p>&copy; 2025 HRMS Enterprise. All rights reserved.</p>
                <div style="margin-top: 1rem; display: flex; gap: 1.5rem; justify-content: center; opacity: 0.7;">
                    <a href="#" style="color: inherit;">Privacy</a>
                    <a href="#" style="color: inherit;">Terms</a>
                    <a href="#" style="color: inherit;">Support</a>
                </div>
            </div>
        </footer>
        
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
        <script src="~/js/particles.js" asp-append-version="true"></script>
        <script src="~/js/enhancements.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    }
</body>
</html>
