@model HRMS.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    var employeeRoles = ViewBag.EmployeeRoles as List<string> ?? new List<string>();
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Warning Header -->
            <div class="alert alert-danger border-danger animate-fade-in" role="alert">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h4 class="alert-heading mb-0">⚠️ Permanent Deletion Warning</h4>
                    </div>
                </div>
                <hr>
                <p class="mb-2"><strong>Are you sure you want to permanently delete this employee profile?</strong></p>
                <ul class="mb-0">
                    <li>This action <strong>CANNOT be undone</strong></li>
                    <li>All employee roles and notification links will be removed</li>
                    <li>Historical records (attendance, leave) may remain but will be orphaned</li>
                    <li>Consider <strong>deactivating</strong> the employee instead if you want to preserve history</li>
                </ul>
            </div>

            <!-- Employee Details Card -->
            <div class="card shadow-sm border-0 animate-scale-in mt-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-times me-2"></i>
                        Delete Employee Profile
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Employee Information</h5>
                    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.first_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.first_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.last_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.last_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.full_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.full_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.national_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.national_id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.date_of_birth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_of_birth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.country_of_birth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.country_of_birth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.emergency_contact_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.emergency_contact_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.emergency_contact_phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.emergency_contact_phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.relationship)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.relationship)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.biography)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.biography)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.profile_image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.profile_image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employment_progress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employment_progress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.account_status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.account_status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employment_status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employment_status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hire_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hire_date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.is_active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.is_active)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.profile_completion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.profile_completion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.password_hash)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.password_hash)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.contract)
        </dt>
        <dd class = "col-sm-10">
