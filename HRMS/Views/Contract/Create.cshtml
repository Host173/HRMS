@model HRMS.Models.Contract
@{
    ViewData["Title"] = "Create Contract";
    var selectedEmployeeId = ViewBag.SelectedEmployeeId as int?;
}

<div style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.75rem; margin-bottom: 0.5rem;">Create Employment Contract</h2>
    <p class="text-muted">Create a new employment contract for an employee</p>
</div>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" style="color: var(--color-danger); margin-bottom: 1rem;"></div>
    
    <div class="premium-card" style="margin-bottom: 1.5rem;">
        <h3 style="font-size: 1.1rem; margin-bottom: 1.5rem; padding-bottom: 0.75rem; border-bottom: 1px solid var(--color-border);">Contract Details</h3>
        
        <div class="form-group" style="margin-bottom: 1rem;">
            <label class="form-label">Employee *</label>
            <select name="employeeId" class="form-control" required>
                <option value="">Select an employee</option>
                @if (ViewBag.Employees != null)
                {
                    @foreach (var employee in ViewBag.Employees as IEnumerable<dynamic>)
                    {
                        <option value="@employee.employee_id" selected="@(selectedEmployeeId == employee.employee_id)">
                            @employee.full_name (@employee.email)
                        </option>
                    }
                }
            </select>
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            <label asp-for="type" class="form-label">Contract Type *</label>
            <select asp-for="type" class="form-control" required>
                <option value="">Select contract type</option>
                @if (ViewBag.ContractTypes != null)
                {
                    @foreach (var type in ViewBag.ContractTypes as IEnumerable<string>)
                    {
                        <option value="@type">@type</option>
                    }
                }
            </select>
            <span asp-validation-for="type" style="color: var(--color-danger); font-size: 0.8rem;"></span>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div class="form-group">
                <label asp-for="start_date" class="form-label">Start Date *</label>
                <input asp-for="start_date" type="date" class="form-control" required />
                <span asp-validation-for="start_date" style="color: var(--color-danger); font-size: 0.8rem;"></span>
            </div>

            <div class="form-group">
                <label asp-for="end_date" class="form-label">End Date</label>
                <input asp-for="end_date" type="date" class="form-control" />
                <span asp-validation-for="end_date" style="color: var(--color-danger); font-size: 0.8rem;"></span>
                <small style="color: var(--color-text-secondary); font-size: 0.8rem;">Leave empty for indefinite contract</small>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="current_state" class="form-label">Initial Status</label>
            <select asp-for="current_state" class="form-control">
                <option value="Draft">Draft</option>
                <option value="Active" selected>Active</option>
            </select>
        </div>
    </div>

    <div style="display: flex; gap: 1rem;">
        <button type="submit" class="btn-premium btn-primary">Create Contract</button>
        <a asp-action="Index" class="btn-premium btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

