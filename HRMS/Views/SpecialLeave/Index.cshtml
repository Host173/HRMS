@model List<HRMS.Models.LeaveRequestViewModel>
@{
    ViewData["Title"] = "Manage Special Leave Requests";
}

<div style="margin-bottom: 2rem;">
    <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">Manage Special Leave Requests</h1>
    <p class="text-muted">Review and manage special leave requests that require HR Admin approval only</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="margin-bottom: 1.5rem;">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="margin-bottom: 1.5rem;">
        @TempData["ErrorMessage"]
    </div>
}

<div class="premium-card">
    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 3rem;">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-secondary)" stroke-width="2" style="margin: 0 auto 1rem; opacity: 0.5;">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <p class="text-muted" style="font-size: 1.1rem;">No special leave requests found.</p>
            <p class="text-muted" style="font-size: 0.9rem; margin-top: 0.5rem;">Special leave requests will appear here when employees submit them.</p>
        </div>
    }
    else
    {
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 2px solid var(--color-border);">
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Employee</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Leave Type</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Start Date</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">End Date</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Duration</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Status</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Created</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr style="border-bottom: 1px solid var(--color-border);">
                            <td style="padding: 0.75rem;">
                                <div style="font-weight: 500;">@request.EmployeeName</div>
                                <div style="font-size: 0.85rem; color: var(--color-text-secondary);">@request.EmployeeEmail</div>
                            </td>
                            <td style="padding: 0.75rem;">
                                <span style="background: rgba(255, 193, 7, 0.2); color: #856404; padding: 0.25rem 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; font-weight: 500;">
                                    @request.LeaveType
                                </span>
                            </td>
                            <td style="padding: 0.75rem;">@request.StartDate.ToString("MMM dd, yyyy")</td>
                            <td style="padding: 0.75rem;">@request.EndDate.ToString("MMM dd, yyyy")</td>
                            <td style="padding: 0.75rem;">@request.Duration day(s)</td>
                            <td style="padding: 0.75rem;">
                                @{
                                    var statusClass = request.Status switch
                                    {
                                        "Approved" => "success",
                                        "Rejected" => "danger",
                                        "Flagged" => "warning",
                                        "Pending" => "info",
                                        _ => "secondary"
                                    };
                                    var statusText = request.Status;
                                    if (request.IsIrregular)
                                    {
                                        statusText += " (Irregular)";
                                    }
                                }
                                <span class="badge badge-@statusClass">@statusText</span>
                            </td>
                            <td style="padding: 0.75rem;">
                                @if (request.CreatedAt.HasValue)
                                {
                                    <div style="font-size: 0.85rem;">@request.CreatedAt.Value.ToString("MMM dd, yyyy")</div>
                                    <div style="font-size: 0.75rem; color: var(--color-text-secondary);">@request.CreatedAt.Value.ToString("HH:mm")</div>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td style="padding: 0.75rem;">
                                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                    <a asp-action="Review" asp-route-id="@request.RequestId" class="btn-premium btn-sm btn-primary">Review</a>
                                    @if (request.Status == "Pending")
                                    {
                                        <form asp-action="Approve" asp-route-id="@request.RequestId" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-premium btn-sm btn-success" onclick="return confirm('Approve this special leave request?');">Approve</button>
                                        </form>
                                        <form asp-action="Reject" asp-route-id="@request.RequestId" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-premium btn-sm btn-danger" onclick="return confirm('Reject this special leave request?');">Reject</button>
                                        </form>
                                        <a asp-action="FlagIrregular" asp-route-id="@request.RequestId" class="btn-premium btn-sm btn-warning">Flag Irregular</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div style="margin-top: 1.5rem;">
    <a asp-controller="Home" asp-action="Index" class="btn-premium btn-secondary">Back to Dashboard</a>
</div>



