@model HRMS.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <div>
            <h2 style="font-size: 1.75rem; margin-bottom: 0.5rem; color: #dc2626;">Delete Employee</h2>
            <p class="text-muted">This action cannot be undone</p>
        </div>
        <a asp-action="Index" class="btn-premium btn-secondary">
            Cancel
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="margin-bottom: 1.5rem;">
        @TempData["ErrorMessage"]
    </div>
}

<div class="premium-card" style="max-width: 800px; margin: 0 auto;">
    <div style="padding: 1.5rem; background: rgba(220, 38, 38, 0.1); border-left: 4px solid #dc2626; border-radius: var(--radius-md); margin-bottom: 2rem;">
        <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#dc2626" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <h3 style="font-size: 1.25rem; color: #dc2626; margin: 0;">Warning: This action is permanent</h3>
        </div>
        <p style="color: var(--color-text); margin: 0;">
            You are about to permanently delete this employee from the system. All associated data, including roles, will be removed. This action cannot be undone.
        </p>
    </div>

    <div style="display: grid; grid-template-columns: 150px 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div>
            @if (!string.IsNullOrEmpty(Model.profile_image))
            {
                <img src="@Model.profile_image" alt="@Model.full_name" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 3px solid var(--color-border);" />
            }
            else
            {
                <div style="width: 150px; height: 150px; background: var(--color-primary-light); border-radius: 50%; color: white; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 3rem; border: 3px solid var(--color-border);">
                    @(Model.first_name?.Substring(0, 1).ToUpper() ?? "?")
                </div>
            }
        </div>
        <div>
            <h3 style="font-size: 1.5rem; margin-bottom: 0.5rem;">@(Model.full_name ?? $"{Model.first_name} {Model.last_name}")</h3>
            <p style="color: var(--color-text-secondary); margin-bottom: 1rem;">@Model.email</p>
            
            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
                <div>
                    <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.25rem;">Department</div>
                    <div style="font-weight: 500;">@(Model.department?.department_name ?? "N/A")</div>
                </div>
                <div>
                    <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.25rem;">Position</div>
                    <div style="font-weight: 500;">@(Model.position?.position_title ?? "N/A")</div>
                </div>
                <div>
                    <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.25rem;">Phone</div>
                    <div style="font-weight: 500;">@(Model.phone ?? "N/A")</div>
                </div>
                <div>
                    <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.25rem;">Status</div>
                    <div>
                        @if (Model.is_active == true)
                        {
                            <span style="background: rgba(34, 197, 94, 0.1); color: #15803d; padding: 0.25rem 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; font-weight: 500;">
                                Active
                            </span>
                        }
                        else
                        {
                            <span style="background: rgba(239, 68, 68, 0.1); color: #dc2626; padding: 0.25rem 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; font-weight: 500;">
                                Inactive
                            </span>
                        }
                    </div>
                </div>
            </div>

            @if (Model.Employee_Role != null && Model.Employee_Role.Any())
            {
                <div style="margin-top: 1rem;">
                    <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.5rem;">Roles</div>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                        @foreach (var role in Model.Employee_Role)
                        {
                            <span style="background: var(--color-primary-light); color: white; padding: 0.25rem 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; font-weight: 500;">
                                @role.role.role_name
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post" style="border-top: 1px solid var(--color-border); padding-top: 1.5rem;">
        <input type="hidden" asp-for="employee_id" />
        <div style="display: flex; gap: 1rem; justify-content: flex-end;">
            <a asp-action="Index" class="btn-premium btn-secondary">
                Cancel
            </a>
            <button type="submit" class="btn-premium btn-danger" style="background: #dc2626; border-color: #dc2626;">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem; vertical-align: middle;">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    <line x1="10" y1="11" x2="10" y2="17"></line>
                    <line x1="14" y1="11" x2="14" y2="17"></line>
                </svg>
                Delete Employee Permanently
            </button>
        </div>
    </form>
</div>





