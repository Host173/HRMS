@model HRMS.Models.Notification

@{
    ViewData["Title"] = "Notification Details";
    var urgencyClass = Model.urgency switch
    {
        "High" => "danger",
        "Medium" => "warning",
        _ => "info"
    };
    var iconClass = Model.notification_type switch
    {
        "Contract" => "fa-file-contract",
        "Leave" => "fa-calendar-alt",
        "Attendance" => "fa-clock",
        "Salary" => "fa-money-bill-wave",
        _ => "fa-info-circle"
    };
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Back Button -->
            <div class="mb-3 animate-fade-in">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Notifications
                </a>
            </div>

            <!-- Notification Card -->
            <div class="card shadow-lg border-0 animate-scale-in">
                <!-- Header -->
                <div class="card-header bg-@urgencyClass text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="notification-icon-large me-3">
                            <i class="fas @iconClass fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.notification_type Notification</h4>
                            <small class="opacity-75">
                                <i class="far fa-clock me-1"></i>
                                @(Model.timestamp.HasValue ? Model.timestamp.Value.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt") : "N/A")
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <!-- Urgency Badge -->
                    <div class="mb-4">
                        <span class="badge bg-@urgencyClass fs-6 px-3 py-2">
                            <i class="fas @(Model.urgency == "High" ? "fa-exclamation-triangle" : "fa-info-circle") me-1"></i>
                            @Model.urgency Priority
                        </span>
                    </div>

                    <!-- Message Content -->
                    <div class="notification-content mb-4">
                        <h5 class="mb-3">Message</h5>
                        <div class="alert alert-light border-start border-4 border-@urgencyClass">
                            <p class="mb-0 text-dark fs-6" style="line-height: 1.8;">
                                @Model.message_content
                            </p>
                        </div>
                    </div>

                    <!-- Details Grid -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-card p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Notification Type</small>
                                <strong>@Model.notification_type</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-card p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Urgency Level</small>
                                <strong class="text-@urgencyClass">@Model.urgency</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-card p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Received</small>
                                <strong>@(Model.timestamp.HasValue ? Model.timestamp.Value.ToLocalTime().ToString("MMM dd, yyyy") : "N/A")</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-card p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Time</small>
                                <strong>@(Model.timestamp.HasValue ? Model.timestamp.Value.ToLocalTime().ToString("h:mm tt") : "N/A")</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Action Items (if contract notification) -->
                    @if (Model.notification_type == "Contract")
                    {
                        <div class="mt-4 p-3 bg-primary bg-opacity-10 rounded">
                            <h6 class="mb-2">
                                <i class="fas fa-tasks text-primary me-2"></i>Action Required
                            </h6>
                            <p class="mb-2 small">Please review your contract details and acknowledge any changes.</p>
                            <a asp-controller="Contract" asp-action="Index" class="btn btn-primary btn-sm">
                                <i class="fas fa-file-contract me-1"></i>View My Contracts
                            </a>
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-check-circle text-success me-1"></i>
                            Marked as read
                        </small>
                        <a asp-action="Index" class="btn btn-sm btn-outline-primary">
                            View All Notifications
                        </a>
                    </div>
                </div>
            </div>

            <!-- Related Actions -->
            <div class="row mt-4 g-3">
                @if (Model.notification_type == "Contract")
                {
                    <div class="col-md-6 animate-slide-up" style="animation-delay: 0.1s;">
                        <div class="card border-0 shadow-sm hover-lift">
                            <div class="card-body text-center">
                                <i class="fas fa-file-contract fa-2x text-primary mb-3"></i>
                                <h6>My Contracts</h6>
                                <p class="small text-muted mb-3">View all your employment contracts</p>
                                <a asp-controller="Contract" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                    Go to Contracts
                                </a>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-md-6 animate-slide-up" style="animation-delay: 0.2s;">
                    <div class="card border-0 shadow-sm hover-lift">
                        <div class="card-body text-center">
                            <i class="fas fa-bell fa-2x text-info mb-3"></i>
                            <h6>All Notifications</h6>
                            <p class="small text-muted mb-3">View your notification history</p>
                            <a asp-action="Index" class="btn btn-sm btn-outline-info">
                                View All
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .notification-icon-large {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
        }

        .notification-content {
            animation: fadeInUp 0.6s ease;
        }

        .detail-card {
            transition: all 0.3s ease;
        }

        .detail-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .hover-lift {
            transition: all 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

