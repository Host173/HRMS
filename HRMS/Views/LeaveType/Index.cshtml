@model List<HRMS.Models.LeaveTypeViewModel>
@{
    ViewData["Title"] = "Manage Leave Types";
}

<div style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <div>
            <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">Manage Leave Types</h1>
            <p class="text-muted">View and manage all leave types in the system</p>
        </div>
        <a asp-action="Create" class="btn-premium btn-primary">Add New Leave Type</a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="margin-bottom: 1.5rem;">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="margin-bottom: 1.5rem;">
        @TempData["ErrorMessage"]
    </div>
}

<div class="premium-card">
    @if (!Model.Any())
    {
        <p class="text-muted">No leave types found. Create your first leave type to get started.</p>
    }
    else
    {
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 2px solid var(--color-border);">
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Leave Type</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Description</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Type</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Requests</th>
                        <th style="padding: 0.75rem; text-align: left; font-weight: 600;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leaveType in Model)
                    {
                        <tr style="border-bottom: 1px solid var(--color-border);">
                            <td style="padding: 0.75rem; font-weight: 500;">@leaveType.LeaveType</td>
                            <td style="padding: 0.75rem;">@(leaveType.LeaveDescription ?? "No description")</td>
                            <td style="padding: 0.75rem;">
                                @if (leaveType.IsSpecialLeave)
                                {
                                    <span class="badge badge-warning">Special Leave</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">Regular Leave</span>
                                }
                            </td>
                            <td style="padding: 0.75rem;">@leaveType.RequestCount</td>
                            <td style="padding: 0.75rem;">
                                <div style="display: flex; gap: 0.5rem;">
                                    <a asp-controller="LeavePolicy" asp-action="Index" asp-route-leaveTypeId="@leaveType.LeaveId" class="btn-premium btn-sm btn-secondary">View Policies</a>
                                    <a asp-action="Edit" asp-route-id="@leaveType.LeaveId" class="btn-premium btn-sm btn-primary">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@leaveType.LeaveId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this leave type? This action cannot be undone.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-premium btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>





